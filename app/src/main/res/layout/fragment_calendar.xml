<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.sundeepk.compactcalendarview.CompactCalendarView
        android:id="@+id/compact_calendar"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:compactCalendarBackgroundColor="@color/trans"
        app:compactCalendarCurrentDayBackgroundColor="@color/trans"
        app:compactCalendarCurrentDayTextColor="@color/light_blue"
        app:compactCalendarCurrentSelectedDayBackgroundColor="@color/light_blue"
        app:compactCalendarMultiEventIndicatorColor="@color/light_blue"
        app:compactCalendarTextColor="#6C6B6B"
        app:compactCalendarTextSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>